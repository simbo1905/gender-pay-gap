@model GenderPayGap.WebUI.Models.ErrorViewModel
@{
    ViewBag.Title = "ERROR: " + Model.Title;
}
<main id="content" role="main">
    <div class="grid-row">
        <div class="column-two-thirds">
            <div class="govuk-box-highlight">
                <h1 class="bold-large">@Model.Title</h1>
                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {<p class="bold-large">@Model.Description</p> }
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <div class="subsection panel-indent">
                    <div class="bold-small">@Model.CallToAction</div>
                </div>
            }
            @if (!string.IsNullOrWhiteSpace(Model.ActionUrl))
            {
                <p></p>
                <a class="button" href="@Model.ActionUrl" role="button">@Model.ActionText</a>
            }
        </div>
    </div>
</main>
