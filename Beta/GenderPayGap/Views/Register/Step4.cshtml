@{
    ViewBag.Title = "Register: Step 5";
}

@model GenderPayGap.WebUI.Models.OrganisationViewModel

<main id="content" role="main">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.EmployerCurrentPage)
        @Html.HiddenFor(m => m.EmployerPages)
        @Html.HiddenFor(m => m.Employers)
        @Html.HiddenFor(m => m.EmployerPageSize)
        @Html.HiddenFor(m => m.EmployerEndIndex)
        @Html.HiddenFor(m => m.EmployerRecords)
        @Html.HiddenFor(m => m.SectorType)

        <input type="submit" style="display:none" name="command" value="">
        <div class="grid-row">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="column-two-thirds">
                <h1 class="heading-large">

                    @if (Model.SectorType == GenderPayGap.Models.SqlDatabase.SectorTypes.Private)
                    {
                        @*if (Model.EmployerRecords > 0)
                        {
                            <span class="heading-secondary">Step 5 of 6</span>
                            <span>Choose your organisation</span>
                        }
                        else 
                        {
                            <span class="heading-secondary">Step 4 of 6</span>
                            <span>Search for your organisation</span>
                        }*@

                        if (Model.EmployerRecords <= 0 )
                        {
                            <span class="heading-secondary">Step 4 of 6</span>
                            <span>Search for your organisation</span>
                        }
                    }

                   @if (Model.SectorType == GenderPayGap.Models.SqlDatabase.SectorTypes.Public)
                   {
                       @*if (Model.EmployerRecords > 0)
                       {
                            <span class="heading-secondary">Step 5 of 6</span>
                            <span>Choose your organisation</span>
                       }
                       else
                       {
                            <span class="heading-secondary">Step 4 of 6</span> //surely not 4 of 5?????!!!! *************************************************************!!!!!!!!!!!!!!!!!!!!
                            <span>Find your organisation</span>
                       }*@

                        if (Model.EmployerRecords <= 0)
                        {
                            <span class="heading-secondary">Step 4 of 6</span> //surely not 4 of 5?????!!!! *************************************************************!!!!!!!!!!!!!!!!!!!!
                            <span>Find your organisation</span>
                        }
                   }
                </h1>

                <div class="search-bar">
                    <div class="searchfield">
                        @Html.EditorFor(model => model.SearchText, new { htmlAttributes = new { @class = "search-input", @placeholder = "Enter an organisation name or company no" } })

                        <button type="submit" class="search-submit" name="command" value="search">Search</button>
                    </div>
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.SearchText))
                {
                     if (Model.Employers == null || Model.Employers.Count < 1)
                     {
                         <p>No records found</p>
                     }
                     else
                     {
                         <br>
                         <table class="search search3">
                             <caption class="visuallyhidden">Customer and Business search listing</caption>
                             @*<thead>
                             <tr>
                                 <th scope="col">Organisation name and registered address</th>

                                 @if (Model.SectorType == GenderPayGap.Models.SqlDatabase.SectorTypes.Private)
                                 {
                                     <th scope="col">Registered number</th>
                                 }

                                 <th scope="col"></th>

                             </tr>
                             </thead>*@

                             <thead>
                                 <tr>
                                    @if (Model.SectorType == GenderPayGap.Models.SqlDatabase.SectorTypes.Private)
                                    {

                                     <th scope="col">Organisation name and registered address</th>

                                     <th scope="col">Registered number</th>

                                     <th scope="col"></th>
                                    }

                                     @if (Model.SectorType == GenderPayGap.Models.SqlDatabase.SectorTypes.Public)
                                     {
                                         <th scope="col">Organisation</th>

                                         @*<th scope="col">Registered number</th>*@

                                         <th scope="col"></th>
                                     }
                                 </tr>
                             </thead>
                             <tbody>
                             @for (var i = 0; i < Model.Employers.Count; i++)
                             {
                                <tr>
                                    @if (Model.SectorType == GenderPayGap.Models.SqlDatabase.SectorTypes.Private)
                                    {
                                        <td>@Model.Employers[i].Name <span>@Model.Employers[i].FullAddress</span></td>

                                        <td>
                                            @Model.Employers[i].CompanyNumber
                                        </td>
                                    }

                                    @if (Model.SectorType == GenderPayGap.Models.SqlDatabase.SectorTypes.Public)
                                    {
                                        <td>@Model.Employers[i].OrgName <span>@Model.Employers[i].EmailPatterns</span></td>
                                    }
                                    <td>
                                        <button type="submit" class="link-button" name="command" value="employer_@i">Choose&nbsp;organisation</button>
                                    </td>
                                </tr>
                             }
                             </tbody>
                         </table>

                         if (Model.Employers.Count > 1)
                         {
                             <div class="pager">
                                 <div class="pager-controls">
                                     @if (Model.EmployerCurrentPage > 1)
                                     {
                                         <button type="submit" class="link-button" name="command" value="pagePrev">Previous</button>
                                     }
                                     <ul class="pager-items">
                                         @for (var i = Model.PagerStartIndex; i <= Model.PagerEndIndex; i++)
                                         {
                                             if (i == Model.EmployerCurrentPage)
                                             {
                                                 <li><b>@i</b></li>
                                             }
                                             else
                                             {
                                                 <li>
                                                     <button type="submit" class="link-button" name="command" value="page_@i">@i</button>
                                                 </li>
                                             }
                                         }
                                     </ul>
                                     @if (Model.EmployerCurrentPage < Model.EmployerPages)
                                     {
                                         <button type="submit" class="link-button" name="command" value="pageNext">Next</button>
                                     }
                                 </div>
                                 <div class="pager-summary">Showing @Model.EmployerStartIndex – @Model.EmployerEndIndex of @Model.EmployerRecords employers</div>
                             </div>
                         }
                     }

                    <br />
                    <br/>

                    <details role="group">
                        <summary role="button" aria-controls="details-content-0" aria-expanded="true">Can't find your organisation?</summary>
                        <div class="panel panel-border-narrow" id="details-content-0" aria-hidden="false">
                            <a href="organisation-address?dc=privateManual">Add your employer manually</a>
                        </div>
                    </details>
                }
                <br>
                @*<p>
                    @Html.ActionLink("Back", "Step3")
                </p>*@

            </div>
        </div>
    }
</main>
